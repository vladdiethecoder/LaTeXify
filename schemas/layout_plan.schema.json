{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LayoutPlan",
  "type": "object",
  "required": ["version", "columns", "blocks"],
  "properties": {
    "version": { "type": "string" },
    "columns": { "type": "integer", "minimum": 1, "maximum": 4 },
    "blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "column", "order", "meta"],
        "properties": {
          "id": { "type": "string" },
          "type": { "enum": ["text", "code", "math", "figure", "table"] },
          "column": { "type": "integer", "minimum": 1 },
          "order": { "type": "integer", "minimum": 0 },
          "meta": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "hint": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
